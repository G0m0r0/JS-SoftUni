{{> header}}
 <div class="container details">
        <div class="details-content">
            <h2>{{data.title}}</h2>
            <strong>{{data.category}}</strong>
            <p>{{data.content}}</p>
            <div class="buttons">
                {{#if canEdit}}
                <a href="#/article/close/{{id}}" class="btn delete">Delete</a>
                <a href="#/article/edit/{{id}}" class="btn edit">Edit</a>
                {{else}}
                <a href="#/dashboard" class="btn edit">Back</a>
                {{/if}}
            </div>
        </div>
    </div>
{{> footer}}