{{> header}}
<div class="container home some">
    <img class="det-img" src="{{data.imageURL}}"/>
    <div class="desc">
      <h2 class="display-5">{{data.title}}</h2>
      <p class="infoType">Description:</p>
      <p class="idea-description">{{data.description}}</p>
      <p class="infoType">Likes: <large>{{data.collectedLikes}}</large>
      </p>
      <p class="infoType">Comments:</p>
      <ul>
        {{#each data.comments}}
        <li class="comment">{{this}}</li>
        {{else}}
        <li class="comment">No comments yet!</li>
        {{/each}}
      </ul>
    </div>
          {{#if canEdit}}
    <div class="text-center">
      <a class="btn detb" href="#/idea/close/{{id}}">Delete</a>
    </div>
    {{else}}
    <form class="text-center" method="" action="">
      <textarea class="textarea-det" name="newComment" id="textarea" placeholder="comment:"></textarea>
      {{!-- <button type="submit" class="btn detb" >Comment</button> --}}
      <a class="btn detb" href="#/idea/comment/{{id}}">Comment</a>
      <a class="btn detb" href="#/idea/like/{{id}}">Like</a>
    </form>
    {{/if}}
  </div>
{{> footer}}